                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li>Hostname: {{ ansible_hostname }}</li>
                            <li>IP Address: {{ ansible_default_ipv4.address }}</li>
                            <li>MAC Address: {{ ansible_default_ipv4.macaddress }}</li>
                            <li>Operating System: {{ ansible_distribution }} {{ ansible_distribution_release }} {{ ansible_distribution_version }}</li>
                            <li>Memory: {{ ansible_memtotal_mb }}</li>
                            <li>Core: {{ ansible_processor_vcpus }}</li>
                            <li>Python Version: {{ ansible_python_version }}</li>
                        </ul>                        
                   </div>
                </div>  
            </div>
        </main>

